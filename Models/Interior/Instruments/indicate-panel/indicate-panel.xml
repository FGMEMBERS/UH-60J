<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <path>indicate-panel.ac</path>

    <animation>
        <type>material</type>
        <object-name>base</object-name>
     <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
      <red>   0.5 </red>
      <green> 0.25 </green>
      <blue>  0.25</blue>
    </emission>
  </animation>

    <animation>
        <type>material</type>
        <object-name>L1</object-name>
        <object-name>L2</object-name>
        <object-name>L3</object-name>
        <object-name>L4</object-name>
        <object-name>L5</object-name>
    	<object-name>LOW_ALT</object-name>
   	<object-name>OIL_PRESS</object-name>
 	<object-name>BATT_LOW</object-name>
  	<object-name>GEN_OUT</object-name>
	<object-name>BRAKE_ON</object-name>
	<object-name>RPM_LOW</object-name>
    	<object-name>FUEL</object-name>
    	<object-name>SUPPLY</object-name>
   	<object-name>LOW</object-name>
   	<object-name>DOOR</object-name>
   	<object-name>TAIL_CHIP</object-name>
   	<object-name>MAIN_CHIP</object-name>
  	<object-name>ENG_CHIP</object-name>
  	<object-name>ENG_OUT</object-name>
  	<object-name>GEAR_BRK</object-name>
     <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>


  <animation>
    <type>select</type>
    <object-name>L1</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
     <greater-than>
       <property>rotors/tail/rpm</property>
       <value>100</value>
     </greater-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>L2</object-name>
    <condition>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>L3</object-name>
  <condition>
   <and>
	<greater-than>
		<property>systems/electrical/volts</property>
		<value>16</value>
	</greater-than>
        <greater-than>
            <property>rotors/main/rpm</property>
            <value>100</value>
        </greater-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>L4</object-name>
    <condition>
     <and>
        <greater-than>
            <property>rotors/gear/total-torque</property>
            <value>1000</value>
        </greater-than>
        <less-than>
            <property>rotors/gear/total-torque</property>
            <value>300000</value>
        </less-than>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
       </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>L5</object-name>
    <condition>
     <and>
        <greater-than>
            <property>rotors/gear/total-torque</property>
            <value>1000</value>
        </greater-than>
        <less-than>
            <property>rotors/gear/total-torque</property>
            <value>250000</value>
        </less-than>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
       </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>LOW_ALT</object-name>
    <condition>
     <and>
        <greater-than>
           <property>position/gear-agl-ft</property>
            <value>1</value>
        </greater-than>
        <less-than>
           <property>position/gear-agl-ft</property>
            <value>100</value>
        </less-than>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
       </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>OIL_PRESS</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
     <less-than>
       <property>engines/engine[0]/rpm</property>
       <value>1500</value>
     </less-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>BATT_LOW</object-name>
  <condition>
   <and>
     <greater-than>
	<property>systems/electrical/volts</property>
	<value>16</value>
     </greater-than>
     <less-than>
       <property>systems/electrical/volts</property>
       <value>24</value>
     </less-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>GEN_OUT</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
     <less-than>
       <property>systems/electrical/gen-load</property>
       <value>0.1</value>
     </less-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>BRAKE_ON</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
     <greater-than>
       <property>controls/rotor/brake</property>
       <value>0.1</value>
     </greater-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>RPM_LOW</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
     <less-than>
       <property>rotors/main/rpm</property>
       <value>450</value>
     </less-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>FUEL</object-name>
  <condition>
   <or>
   <and>
	<greater-than>
		<property>systems/electrical/volts</property>
		<value>16</value>
	</greater-than>
     <property>consumables/fuel/tank/empty</property>
    </and>
   <and>
	<greater-than>
	<property>systems/electrical/volts</property>
	<value>16</value>
	</greater-than>
     <less-than>
       <property>consumables/fuel/total-fuel-lbs</property>
       <value>50</value>
     </less-than>
    </and>
    </or>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>SUPPLY</object-name>
  <condition>
   <and>
	<greater-than>
	<property>systems/electrical/volts</property>
	<value>16</value>
	</greater-than>
     <property>consumables/fuel/tank/empty</property>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>LOW</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
     <less-than>
       <property>consumables/fuel/total-fuel-lbs</property>
       <value>50</value>
     </less-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>DOOR</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
     <greater-than>
       <property>instrumentation/doors/crew/position-norm</property>
       <value>0.05</value>
     </greater-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>TAIL_CHIP</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
     <less-than>
       <property>rotors/tail/rpm</property>
       <value>10</value>
     </less-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>MAIN_CHIP</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
     <less-than>
       <property>rotors/main/rpm</property>
       <value>10</value>
     </less-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ENG_CHIP</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
     <less-than>
       <property>engines/engine/n1-pct</property>
       <value>90</value>
     </less-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ENG_OUT</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
     <less-than>
       <property>engines/engine/n2-pct</property>
       <value>60</value>
     </less-than>
    </and>
   </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>GEAR_BRK</object-name>
  <condition>
   <and>
		<greater-than>
			<property>systems/electrical/volts</property>
			<value>16</value>
		</greater-than>
   <or>
      <property>controls/gear/brake-parking</property>
      <property>controls/gear/brake-right</property>
      <property>controls/gear/brake-left</property>
   </or>
   </and>
   </condition>
  </animation>

</PropertyList>

